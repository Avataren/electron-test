{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node", "electron"],
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.electron.tsbuildinfo"
  },
  "include": ["electron/**/*.ts", "electron/**/*.tsx"]
}
